@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="text-center">
    <div><p class="bg-info">We will send you your PIN via email</p></div>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <label asp-for="Email"></label><br />
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber"></label><br />
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CardNumber"></label><br />
            <input class="form-control" asp-for="CardNumber" />
            <span asp-validation-for="CardNumber"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PasswordConfirm"></label><br />
            <input class="form-control" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary m-2">Create Account</button>
        </div>
    </form>
</div>